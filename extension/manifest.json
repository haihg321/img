{
  "manifest_version": 3,
  "name": "E-Commerce Image Extractor",
  "version": "3.0",
  "description": "Extract high-quality product images from e-commerce sites",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon.png"
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["js/content.js"],
    "css": ["css/content.css"]
  }]
}